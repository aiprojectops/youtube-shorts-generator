            {
                await JSRuntime.InvokeVoidAsync("alert", "캡션 텍스트를 입력해주세요.");
                return;
            }
        
            bool ffmpegAvailable = await VideoPostProcessor.IsFFmpegAvailableAsync();
            if (!ffmpegAvailable)
            {
