    <!-- 🔥 여기에 추가! -->
    <script>
        // 쿠키 설정 함수
        window.setCookie = function(name, value, days) {
            const date = new Date();
            date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
            const expires = "expires=" + date.toUTCString();
            document.cookie = name + "=" + value + ";" + expires + ";path=/;SameSite=Lax";
            console.log(`쿠키 저장: ${name}=${value}`);
        };

        // 쿠키 읽기 함수
        window.getCookie = function(name) {
            const nameEQ = name + "=";
            const ca = document.cookie.split(';');
            for(let i = 0; i < ca.length; i++) {
                let c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) {
                    const value = c.substring(nameEQ.length, c.length);
                    console.log(`쿠키 읽기: ${name}=${value}`);
                    return value;
                }
            }
            console.log(`쿠키 없음: ${name}`);
            return null;
        };

        // 이미지 비율 체크 함수
        window.checkImageAspectRatio = function(dataUrl) {
            console.log('[JavaScript] checkImageAspectRatio 호출됨');
            
            return new Promise((resolve, reject) => {
                const img = new Image();
                
                img.onload = function() {
                    console.log(`[JavaScript] 이미지 로드 성공 - Width: ${img.width}, Height: ${img.height}`);
                    resolve({
                        isValid: true,
                        width: img.width,
                        height: img.height
                    });
                };
                
                img.onerror = function() {
                    console.log('[JavaScript] 이미지 로드 실패');
                    resolve({
                        isValid: false,
                        width: 0,
                        height: 0
                    });
                };
                
                img.src = dataUrl;
            });
        };        
        console.log('[JavaScript] checkImageAspectRatio 함수 등록 완료');

    </script>
</body>

</html>
